// OOP: Static Members
class BaseC22147Bz {
    public static let instance_count: int = 0
    public static def increment_count() -> void { BaseC22147Bz.instance_count = BaseC22147Bz.instance_count + 1; }
    
    public let id: int
    
    def init(id: int) {
        self.id = id;
        BaseC22147Bz.increment_count();
    }
    
    public def get_id() -> int { return self.id; }
}

let obj1 = BaseC22147Bz(id: 1);
let obj2 = BaseC22147Bz(id: 2);
let obj3 = BaseC22147Bz(id: 3);

print(BaseC22147Bz.instance_count);
print(obj1.get_id());
print(obj3.get_id());
