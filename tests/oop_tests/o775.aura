// OOP: Static Factory Pattern
class BaseC80020Ax {
    private let value: int
    
    def init(value: int) { self.value = value; }
    
    public def get_value() -> int { return self.value; }
    
    public static def create_default() -> BaseC80020Ax {
        return BaseC80020Ax(value: 42);
    }
    
    public static def create_custom(val: int) -> BaseC80020Ax {
        return BaseC80020Ax(value: val);
    }
}

let obj1 = BaseC80020Ax.create_default();
let obj2 = BaseC80020Ax.create_custom(2);

print(obj1.get_value());
print(obj2.get_value());
